<!DOCTYPE html>
<html lang="en">

<head>
  <title>Vote</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />
  <link rel="stylesheet" href="/styles/polls.css" type="text/css" />
  <link rel="stylesheet" href="/styles/vote.css" type="text/css" />

</head>

<body>

  <% include partials/_navbar %>

  <div class="poll-container">
    <div id="div-ask"><%= question %></div>
    <div id="div-choices">
      <% for (let i = 0; i < choices.length; i++) { %>
      <div class="choice-list"><%= choices[i] %><span><%= descriptions[i] %></span></div>
      <% } %>
    </div>
    <form id="poll-question" action="/vote" method="POST">
      <input id="submit-poll-btn" type="submit" value="submit" />
    </form>

    <div class="url-link">
      <input type="text" value="localhost:8080/vote/<%= voteURL %>" id="copy-url">
      <button id="copy-btn" onclick="copy()">copy URL</button>
      <script>
        const copy = () => {
          let copyText = document.getElementById("copy-url");
          copyText.select();
          copyText.setSelectionRange(0, 99999)
          document.execCommand("copy");
        };
      </script>
    </div>
  </div>

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script src="/vendor/jquery-ui.min.js"></script>
  <script type="text/javascript" src="/scripts/helpers.js"></script>


</body>

</html>
